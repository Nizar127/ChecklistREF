<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashname"
    tools:context=".Authentication.SignUpActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_add_new_product"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/splashname">

                <ImageView
                    android:id="@+id/back_btn_add_signupmain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/the_arrow_back" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >



                <ImageView
                    android:id="@+id/login_logo"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/logo" />



                <EditText
                    android:id="@+id/signup_username_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/candyapple"
                    android:padding="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Your Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textSize="17sp"
                    android:textStyle="bold"/>


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="Designation"
                    android:outlineSpotShadowColor="@color/White"
                    android:spinnerMode="dropdown" />



                <EditText
                    android:id="@+id/signup_id_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/candyapple"
                    android:padding="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Employee ID"
                    android:inputType="textPersonName"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

